<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crud.EditComapny">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <ListView x:Name="lstAllcomp" ItemSelected="lstAllcomp_ItemSelected" >

                </ListView>
                <Entry Placeholder="ID" x:Name="Cid" IsVisible="False" />
                <Entry Placeholder="Company name" x:Name="Cname" />
                <Entry Placeholder="Address" x:Name="CAdd" />
                <Button Text="Save" Clicked="Button_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>